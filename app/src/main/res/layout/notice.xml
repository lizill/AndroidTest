<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="공지사항"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:id="@+id/noticeText"
        android:drawableStart="@drawable/ic_baseline_chat_24"
        android:drawableLeft="@drawable/ic_baseline_chat_24"
        android:background="#29a6ff"
        android:textStyle="bold"
        />

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/noticeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3b4d59">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="dong"
            android:textAlignment="center"
            android:paddingLeft="3dp"
            android:layout_marginLeft="8dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:id="@+id/nameText"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2021-03-26"
            android:textAlignment="center"
            android:paddingLeft="3dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:id="@+id/dateText"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>